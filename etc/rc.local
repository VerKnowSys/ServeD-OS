#!/bin/sh

echo "Initializing PAX for installed Software"
for pax in /Software/*/.pax; do
    echo "Enforcing PAX features of software bundle: ${pax}"
    . "${pax}"
done

if [ -x "/usr/bin/gvr" ]; then
    echo "Bring back all previously started jails…"
    sh -c "gvr boot"
fi

if [ -x "/usr/bin/custody" ]; then
    echo "Start custody daemon…"
    nohup daemon \
        -o "/var/log/gvr-custody.log" \
        -R1 -P "/var/run/custody.pid" \
        "/usr/bin/custody" >/dev/null
fi

return 0
